{
    "compilerOptions": {
        "lib": ["esnext"],
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": ["./types", "./node_modules/@types"],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "pocketnet-proxy/*": ["node_modules/pocketnet.proxy/*"]
        }
    },
    "include": [
        "src/**/*",
        "types/**/*"
    ]
}